#!/bin/bash
USAGE="Launch the unit tests for the connector_ecommerce module.
\n
unittest_connector_ecommerce [options]\n
\n
Options:\n
-h or --help: display this help\n
-d: database\n
-p: port\n
(+ all the options from oe.)
"

OE=`dirname $0`/oe
ROOTDIR=`dirname $0`/..
DBNAME=${openerp:options.db_name}
ADDONS_PATH=$${ROOTDIR}/parts/webclient/addons,$${ROOTDIR}/parts/addons,$${ROOTDIR}/parts/connector,$${ROOTDIR}/parts/e-commerce-addons
ADDONS=connector_ecommerce
PORT=${openerp:options.xmlrpc_port}

if [ "$1" == "-h" ] || [ "$1" == "--help" ]
then
    echo -e $${USAGE}
else
    $${OE} run-tests --database=$${DBNAME} --port=$${PORT} --addons=$${ADDONS_PATH} -m $${ADDONS}
fi
